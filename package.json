{
  "name": "@clix-so/react-native-sdk",
  "version": "1.4.0",
  "description": "Clix - Mobile push for builders",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "ios",
    "clix-react-native-sdk.podspec",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it --only-version"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "clix",
    "sdk"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clix-so/clix-react-native-sdk.git"
  },
  "author": "Clix <team@clix.so> (https://github.com/clix-so/clix-react-native-sdk)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clix-so/clix-react-native-sdk/issues"
  },
  "homepage": "https://github.com/clix-so/clix-react-native-sdk#readme",
  "packageManager": "npm@10.9.2",
  "peerDependencies": {
    "@notifee/react-native": "*",
    "@react-native-firebase/app": "*",
    "@react-native-firebase/messaging": "*",
    "react": "*",
    "react-native": "*",
    "react-native-device-info": "*",
    "react-native-get-random-values": "*",
    "react-native-mmkv": "*",
    "uuid": "*"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "19.6.0",
    "@evilmartians/lefthook": "1.5.0",
    "@notifee/react-native": "9.1.8",
    "@react-native-community/cli": "15.0.0",
    "@react-native-community/eslint-config": "2.0.0",
    "@react-native-firebase/app": "19.3.0",
    "@react-native-firebase/messaging": "19.3.0",
    "@react-native/babel-preset": "0.76.9",
    "@release-it/conventional-changelog": "9.0.2",
    "@types/jest": "29.5.5",
    "@types/react": "18.3.12",
    "commitlint": "19.6.1",
    "del-cli": "5.1.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "29.7.0",
    "pod-install": "0.1.0",
    "prettier": "2.8.8",
    "react": "18.3.1",
    "react-native": "0.76.9",
    "react-native-builder-bob": "0.40.12",
    "react-native-device-info": "13.2.0",
    "react-native-get-random-values": "1.11.0",
    "react-native-mmkv": "4.0.1",
    "release-it": "17.10.0",
    "typescript": "5.8.3",
    "uuid": "11.1.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/samples/BasicApp/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "ClixSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "so.clix"
    }
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.51.1"
  }
}
